{
  "formInfo": {
    "name": "clientes",
    "displayName": "Cadastro de Clientes",
    "description": "Cadastro completo de clientes para CRM",
    "category": "Negócios",
    "version": "1.0"
  },
  "fields": [
    {
      "name": "nome_completo",
      "label": "Nome Completo",
      "type": "text_short",
      "description": "Nome completo do cliente",
      "validation": {
        "required": true,
        "minLength": 3,
        "maxLength": 100
      }
    },
    {
      "name": "tipo_cliente",
      "label": "Tipo de Cliente",
      "type": "choice_single",
      "description": "Pessoa física ou jurídica",
      "options": [
        "Pessoa Física",
        "Pessoa Jurídica"
      ],
      "validation": {
        "required": true
      },
      "defaultValue": "Pessoa Física"
    },
    {
      "name": "cpf",
      "label": "CPF",
      "type": "cpf",
      "description": "CPF do cliente (apenas pessoa física)",
      "validation": {
        "required": false,
        "unique": true
      }
    },
    {
      "name": "cnpj",
      "label": "CNPJ",
      "type": "cnpj",
      "description": "CNPJ da empresa (apenas pessoa jurídica)",
      "validation": {
        "required": false,
        "unique": true
      }
    },
    {
      "name": "data_nascimento",
      "label": "Data de Nascimento",
      "type": "date",
      "description": "Data de nascimento do cliente",
      "validation": {
        "required": false
      }
    },
    {
      "name": "email",
      "label": "E-mail",
      "type": "email",
      "description": "E-mail principal do cliente",
      "validation": {
        "required": true,
        "unique": true
      }
    },
    {
      "name": "telefone",
      "label": "Telefone Principal",
      "type": "phone",
      "description": "Telefone de contato",
      "validation": {
        "required": true
      }
    },
    {
      "name": "telefone_alternativo",
      "label": "Telefone Alternativo",
      "type": "phone",
      "description": "Telefone secundário",
      "validation": {
        "required": false
      }
    },
    {
      "name": "cep",
      "label": "CEP",
      "type": "cep",
      "description": "CEP do endereço",
      "validation": {
        "required": false
      }
    },
    {
      "name": "endereco",
      "label": "Endereço",
      "type": "text_short",
      "description": "Rua, número",
      "validation": {
        "required": false,
        "maxLength": 150
      }
    },
    {
      "name": "complemento",
      "label": "Complemento",
      "type": "text_short",
      "description": "Apartamento, bloco, etc",
      "validation": {
        "required": false,
        "maxLength": 50
      }
    },
    {
      "name": "bairro",
      "label": "Bairro",
      "type": "text_short",
      "description": "Bairro",
      "validation": {
        "required": false,
        "maxLength": 50
      }
    },
    {
      "name": "cidade",
      "label": "Cidade",
      "type": "text_short",
      "description": "Cidade",
      "validation": {
        "required": false,
        "maxLength": 50
      }
    },
    {
      "name": "estado",
      "label": "Estado",
      "type": "choice_single",
      "description": "Estado (UF)",
      "options": [
        "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO",
        "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI",
        "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO"
      ],
      "validation": {
        "required": false
      }
    },
    {
      "name": "categoria",
      "label": "Categoria do Cliente",
      "type": "choice_single",
      "description": "Classificação do cliente",
      "options": [
        "Bronze",
        "Prata",
        "Ouro",
        "Platinum",
        "VIP"
      ],
      "validation": {
        "required": true
      },
      "defaultValue": "Bronze"
    },
    {
      "name": "origem",
      "label": "Como Conheceu",
      "type": "choice_single",
      "description": "Como o cliente conheceu a empresa",
      "options": [
        "Indicação",
        "Redes Sociais",
        "Google",
        "Anúncio",
        "Panfleto",
        "Outdoor",
        "Já era cliente",
        "Outro"
      ],
      "validation": {
        "required": false
      }
    },
    {
      "name": "preferencia_contato",
      "label": "Preferência de Contato",
      "type": "choice_single",
      "description": "Como prefere ser contatado",
      "options": [
        "WhatsApp",
        "E-mail",
        "Telefone",
        "SMS"
      ],
      "validation": {
        "required": false
      },
      "defaultValue": "WhatsApp"
    },
    {
      "name": "observacoes",
      "label": "Observações",
      "type": "text_long",
      "description": "Informações adicionais sobre o cliente",
      "validation": {
        "required": false,
        "maxLength": 500
      }
    },
    {
      "name": "data_primeiro_contato",
      "label": "Data do Primeiro Contato",
      "type": "date",
      "description": "Quando o cliente entrou em contato pela primeira vez",
      "validation": {
        "required": false
      }
    },
    {
      "name": "ultima_compra",
      "label": "Data da Última Compra",
      "type": "date",
      "description": "Data da última compra realizada",
      "validation": {
        "required": false
      }
    },
    {
      "name": "total_gasto",
      "label": "Total Gasto",
      "type": "money",
      "description": "Total que o cliente já gastou (calculado)",
      "calculated": true,
      "validation": {
        "required": false
      },
      "defaultValue": "0.00"
    },
    {
      "name": "ativo",
      "label": "Cliente Ativo",
      "type": "boolean",
      "description": "Cliente ainda compra/usa serviços?",
      "validation": {
        "required": true
      },
      "defaultValue": "true"
    },
    {
      "name": "newsletter",
      "label": "Aceita Newsletter",
      "type": "boolean",
      "description": "Cliente aceita receber e-mails promocionais",
      "validation": {
        "required": false
      },
      "defaultValue": "false"
    },
    {
      "name": "satisfacao",
      "label": "Nível de Satisfação",
      "type": "rating",
      "description": "Avaliação do cliente sobre o atendimento",
      "validation": {
        "required": false
      }
    }
  ]
}