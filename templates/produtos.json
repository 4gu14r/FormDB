{
  "formInfo": {
    "name": "produtos",
    "displayName": "Controle de Estoque - Produtos",
    "description": "Cadastro completo de produtos para controle de estoque",
    "category": "Negócios",
    "version": "1.0"
  },
  "fields": [
    {
      "name": "codigo",
      "label": "Código do Produto",
      "type": "text_short",
      "description": "Código único de identificação (ex: P001, PROD-123)",
      "validation": {
        "required": true,
        "unique": true,
        "maxLength": 20
      }
    },
    {
      "name": "nome",
      "label": "Nome do Produto",
      "type": "text_short",
      "description": "Nome completo do produto",
      "validation": {
        "required": true,
        "minLength": 3,
        "maxLength": 100
      }
    },
    {
      "name": "descricao",
      "label": "Descrição",
      "type": "text_long",
      "description": "Descrição detalhada do produto",
      "validation": {
        "required": false,
        "maxLength": 500
      }
    },
    {
      "name": "categoria",
      "label": "Categoria",
      "type": "choice_single",
      "description": "Categoria do produto",
      "options": [
        "Eletrônicos",
        "Roupas",
        "Alimentos",
        "Bebidas",
        "Livros",
        "Brinquedos",
        "Móveis",
        "Ferramentas",
        "Cosméticos",
        "Outros"
      ],
      "validation": {
        "required": true
      }
    },
    {
      "name": "preco_custo",
      "label": "Preço de Custo",
      "type": "money",
      "description": "Quanto você pagou pelo produto",
      "validation": {
        "required": true,
        "minValue": 0
      },
      "defaultValue": "0.00"
    },
    {
      "name": "preco_venda",
      "label": "Preço de Venda",
      "type": "money",
      "description": "Preço que você vende o produto",
      "validation": {
        "required": true,
        "minValue": 0
      },
      "defaultValue": "0.00"
    },
    {
      "name": "margem",
      "label": "Margem de Lucro (%)",
      "type": "decimal",
      "description": "Calculado automaticamente",
      "calculated": true,
      "formula": "((preco_venda - preco_custo) / preco_custo) * 100",
      "validation": {
        "required": false
      }
    },
    {
      "name": "estoque_atual",
      "label": "Estoque Atual",
      "type": "number",
      "description": "Quantidade em estoque",
      "validation": {
        "required": true,
        "minValue": 0
      },
      "defaultValue": "0"
    },
    {
      "name": "estoque_minimo",
      "label": "Estoque Mínimo",
      "type": "number",
      "description": "Quantidade mínima antes de alerta",
      "validation": {
        "required": true,
        "minValue": 0
      },
      "defaultValue": "10"
    },
    {
      "name": "fornecedor",
      "label": "Fornecedor",
      "type": "text_short",
      "description": "Nome do fornecedor",
      "validation": {
        "required": false,
        "maxLength": 100
      }
    },
    {
      "name": "marca",
      "label": "Marca",
      "type": "text_short",
      "description": "Marca do produto",
      "validation": {
        "required": false,
        "maxLength": 50
      }
    },
    {
      "name": "unidade",
      "label": "Unidade de Medida",
      "type": "choice_single",
      "description": "Como o produto é vendido",
      "options": [
        "Unidade (UN)",
        "Caixa (CX)",
        "Pacote (PC)",
        "Quilo (KG)",
        "Litro (L)",
        "Metro (M)",
        "Dúzia (DZ)"
      ],
      "validation": {
        "required": true
      },
      "defaultValue": "Unidade (UN)"
    },
    {
      "name": "codigo_barras",
      "label": "Código de Barras (EAN)",
      "type": "text_short",
      "description": "Código de barras do produto (13 dígitos)",
      "validation": {
        "required": false,
        "minLength": 13,
        "maxLength": 13
      }
    },
    {
      "name": "localizacao",
      "label": "Localização",
      "type": "text_short",
      "description": "Onde o produto está armazenado (ex: Prateleira A3)",
      "validation": {
        "required": false,
        "maxLength": 50
      }
    },
    {
      "name": "data_validade",
      "label": "Data de Validade",
      "type": "date",
      "description": "Para produtos perecíveis",
      "validation": {
        "required": false
      }
    },
    {
      "name": "ativo",
      "label": "Produto Ativo",
      "type": "boolean",
      "description": "Produto está sendo vendido?",
      "validation": {
        "required": true
      },
      "defaultValue": "true"
    },
    {
      "name": "destaque",
      "label": "Produto em Destaque",
      "type": "boolean",
      "description": "Exibir como destaque?",
      "validation": {
        "required": false
      },
      "defaultValue": "false"
    },
    {
      "name": "avaliacao",
      "label": "Avaliação",
      "type": "rating",
      "description": "Qualidade/popularidade do produto",
      "validation": {
        "required": false
      }
    }
  ]
}